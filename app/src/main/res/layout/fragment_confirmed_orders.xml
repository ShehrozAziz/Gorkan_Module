<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ConfirmedOrdersFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <!-- Header Section (10% of screen height) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/BG"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/header_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"

                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="Graveyard"
                    android:textColor="@color/BG"
                    android:textStyle="bold"
                    android:textSize="25sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Merged CardView (with rounded top corners and square bottom) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            app:cardBackgroundColor="@color/FG"
            android:layout_marginHorizontal="8dp"
            app:cardElevation="4dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceTopRounded"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:orientation="vertical">

                <!-- Status Section -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:paddingHorizontal="36dp">
                    <!-- Booked Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:gravity="start"
                        android:orientation="horizontal">
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="#FF6F6F" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completed"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <!-- Empty Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="#4CAF50" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Empty Graves Slots"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <!-- Safe to Override Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:gravity="start"
                        android:orientation="horizontal">
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="#673AB7" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In Progress for Burial"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <!-- Ready for Burial Status -->

                </LinearLayout>

                <!-- Scrollable GridLayout (60% of screen height) -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <GridLayout
                                android:id="@+id/gridLayout1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:columnCount="5">
                            </GridLayout>
                            <GridLayout
                                android:id="@+id/gridLayout2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:columnCount="5">
                            </GridLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </ScrollView>

                <!-- Footer Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="Long Press on Grave to Open Menu"
                    android:textStyle="italic" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</FrameLayout>
